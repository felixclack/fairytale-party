!!! XML
!!!
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
%head
  %title= @page_title
  <meta http-equiv="content-type" content="text/xhtml; charset=utf-8" />
  <meta http-equiv="imagetoolbar" content="no" />
  <meta name="distribution" content="all" />
  <meta name="robots" content="all" />	
  <meta name="resource-type" content="document" />
  <meta name="MSSmartTagsPreventParsing" content="true" />

  = stylesheet_link_tag 'screen', 'ie', 'default'
  = stylesheet_link_tag 'print', :media => "print"
  = javascript_include_tag "jquery", "jquery-ui", :defaults

%body
  #header
    %h1
      = link_to "Fairytale Party<span></span>", root_path

    %ul#nav
      %li#home_link= link_to("Home", root_path)
      %li#about_link= link_to("About Us", about_path)
      %li#book_link= link_to("Book a party", book_path)
    
  #content
    = yield :layout